@model SGAWebApplication.Models.ModelImgClass
@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid overflow-hidden my-5 px-lg-0">
    <div class="container about px-lg-0">
        <div class="row text-center">
            <h3>@Model.srvhdrcontent.HeaderContent</h3><br/><br/>
            <p>@Model.srvhdrcontent.PContent</p>
        </div><br/><br/>
        <div class="row">
            @foreach (var itm in Model.srvobjlist)
            {
                var base64 = Convert.ToBase64String(itm.Data);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

               
                <div class="col-lg-3">
                    <div class="row">
                        <div class="col-lg-12"><img class="img-fluid" src="@imgsrc" alt=""></div>
                        <div class="col-lg-12"><h5>@itm.SrvTitle</h5></div>                        
                    </div>
                    </div>
            }

        </div>
    </div>
</div>