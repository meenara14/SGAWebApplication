@model SGAWebApplication.Models.AboutUs
@{
    ViewData["Title"] = "UpdateAboutUs";
    Layout = "~/Views/Shared/_ManageLayout .cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12" style="text-align:center">
            <h3>About Us</h3>
        </div>
        <br />
        <br />
        <form method="post" asp-controller="Master" asp-action="AboutUsEdit">
            <div class="form-group text-center">
                <div class="col-12">
                    <h3>Content</h3>
                </div>
                <div class="col-12">

                    <textarea asp-for="Description" rows="10" cols="100"></textarea>
                </div>
                <div class="col-md-12">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>

        </form>
    </div>
</div>


